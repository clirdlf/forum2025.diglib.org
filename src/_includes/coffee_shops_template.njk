<section id="coffee">
  <h2 class="text-2xl font-semibold mb-4">Coffee Shops</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {% for shop in coffee_shops %}
    <div class="card bg-white p-4 rounded-xl shadow">
      <h3 class="text-xl font-bold">
        <a href="{{ shop.url }}" target="_blank" class="text-blue-700 hover:underline">
          {{ shop.name }}
          </a>
      </h3>
      <p class="text-sm text-gray-600">{{ shop.address }} | {{ shop.distance }} from hotel</p>
      <p>{{ shop.notes }}</p>
      <p>
        Accessibility:
        {% if shop.accessibility.length > 0 %}
          {{ shop.accessibility | join('; ') }}
        {% else %}
          Not listed
        {% endif %}
      </p>
    </div>
    {% endfor %}
  </div>
</section>