<section id="culture">
  <h2 class="text-2xl font-semibold mb-4">Cultural Attractions</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {% for attraction in cultural_attractions %}
    <div class="card bg-white p-4 rounded-xl shadow">
      <h3 class="text-xl font-bold">
        {% if attraction.url %}
          <a href="{{ attraction.url }}" target="_blank" class="text-blue-700 hover:underline">
            {{ attraction.name }}
          </a>
        {% else %}
          {{ attraction.name }}
        {% endif %}
      </h3>
      <p class="text-sm text-gray-600">{{ attraction.address }} | {{ attraction.distance }}</p>
      <p>{{ attraction.notes }}</p>
      <p>Cost: {{ attraction.cost }}</p>
      <p>
        Accessibility:
        {% if attraction.accessibility.length > 0 %}
          {{ attraction.accessibility | join('; ') }}
        {% else %}
          Not listed
        {% endif %}
      </p>
    </div>
    {% endfor %}
  </div>
</section>