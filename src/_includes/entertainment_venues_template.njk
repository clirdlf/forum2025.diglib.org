<section id="entertainment">
  <h2 class="text-2xl font-semibold mb-4">Entertainment Venues</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {% for venue in entertainment_venues %}
    <div class="card bg-white p-4 rounded-xl shadow">
      <h3 class="text-xl font-bold">
        {% if venue.url %}
          <a href="{{ venue.url }}" target="_blank" class="text-blue-700 hover:underline">
            {{ venue.name }}
          </a>
        {% else %}
          {{ venue.name }}
        {% endif %}
      </h3>
      <p class="text-sm text-gray-600">{{ venue.address }} | {{ venue.distance }} from hotel</p>
      <p>{{ venue.notes }}</p>
      <p>
        Accessibility:
        {% if venue.accessibility.length > 0 %}
          {{ venue.accessibility | join('; ') }}
        {% else %}
          Not listed
        {% endif %}
      </p>
    </div>
    {% endfor %}
  </div>
</section>