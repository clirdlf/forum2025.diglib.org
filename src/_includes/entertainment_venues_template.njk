<section id="entertainment" class="transition-opacity duration-300">
  <h2 class="text-2xl font-semibold mb-4">Entertainment Venues</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {% for venue in entertainment_venues %}
    <div class="card bg-white p-4 rounded-xl shadow">
      <h3 class="text-xl font-bold">
        {% if venue.url %}
          <a href="{{ venue.url }}" target="_blank" class="text-blue-700 hover:underline">
            {{ venue.name }}
          </a>
        {% else %}
          {{ venue.name }}
        {% endif %}
      </h3>
      <p class="flex items-start gap-2 text-sm text-gray-600 mt-1">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="h-4 w-4 mt-1 text-gray-600">
          <path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/>
        </svg>
        {{ venue.address }} | {{ venue.distance }} from hotel
      </p>
      <p class="flex items-start gap-2 mt-1">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-5 w-5 mt-1 text-gray-700">
          <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336l24 0 0-64-24 0c-13.3 0-24-10.7-24-24s10.7-24 24-24l48 0c13.3 0 24 10.7 24 24l0 88 8 0c13.3 0 24 10.7 24 24s-10.7 24-24 24l-80 0c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"/>
        </svg>
        {{ venue.notes }}
      </p>
      <p class="flex items-start gap-2 mt-1">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-5 w-5 mt-1 text-gray-700">
          <path d="M192 96a48 48 0 1 0 0-96 48 48 0 1 0 0 96zM120.5 247.2c12.4-4.7 18.7-18.5 14-30.9s-18.5-18.7-30.9-14C43.1 225.1 0 283.5 0 352c0 88.4 71.6 160 160 160c61.2 0 114.3-34.3 141.2-84.7c6.2-11.7 1.8-26.2-9.9-32.5s-26.2-1.8-32.5 9.9C240 440 202.8 464 160 464C98.1 464 48 413.9 48 352c0-47.9 30.1-88.8 72.5-104.8zM259.8 176l-1.9-9.7c-4.5-22.3-24-38.3-46.8-38.3c-30.1 0-52.7 27.5-46.8 57l23.1 115.5c6 29.9 32.2 51.4 62.8 51.4l5.1 0c.4 0 .8 0 1.3 0l94.1 0c6.7 0 12.6 4.1 15 10.4L402 459.2c6 16.1 23.8 24.6 40.1 19.1l48-16c16.8-5.6 25.8-23.7 20.2-40.5s-23.7-25.8-40.5-20.2l-18.7 6.2-25.5-68c-11.7-31.2-41.6-51.9-74.9-51.9l-68.5 0-9.6-48 63.4 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-76.2 0z"/>
        </svg>
        <span>
          Accessibility:
          {% if venue.accessibility.length > 0 %}
            {{ venue.accessibility | join('; ') }}
          {% else %}
            Not listed
          {% endif %}
        </span>
      </p>
    </div>
    {% endfor %}
  </div>
</section>