<section aria-labelledby="useful-information">
  <div class="container mx-auto px-8 py-10">
    <div class="mb-16 text-center">
      <p class="block antialiased font-sans text-blue-700 mb-2 font-bold text-lg">Useful Information</p>
      <h2 class="block antialiased tracking-normal font-sans text-4xl font-semibold leading-[1.3] text-blue-gray-900">Resources</h2>
      <p class="block antialiased font-sans text-xl font-normal leading-relaxed text-blue-gray-800">Guides, tips, and everything else to help you have a successful Forum.</p>
    </div>
    <div class="grid grid-cols-1 items-start mt-15 gap-y-16 gap-x-8 md:grid-cols-2 lg:grid-cols-3">
      {%- for resource in collections.resources %}
        {% if resource.data.draft == false %}
          <div class="relative flex flex-col bg-clip-border rounded-xl bg-transparent text-gray-700 shadow-none">
            <div class="relative bg-clip-border rounded-xl overflow-hidden bg-white text-gray-700 shadow-lg mx-0 mt-0 mb-8 h-56">
              <img eleventy:widths="200,600" src="{{ resource.data.cover }}" alt="{{ resource.data.title }}" class="h-full w-full object-cover"></div>
            <div class="p-0">

              <a href="{{ resource.url }}" class="grid grid-cols-6 items-baseline gap-2 text-blue-gray-900 transition-colors hover:text-blue-700">
                <div class="col-span-5">
                  <h3 class="block antialiased tracking-normal font-sans text-2xl font-semibold leading-snug text-inherit normal-case">{{ resource.data.title }}</h3>
                </div>
              </a>
              <p class="block antialiased font-sans text-base leading-relaxed text-gray-700 mb-6 font-normal">
                {{ resource.data.description | safe }}
              </p>

            </div>
          </div>
        {% endif %}
      {%- endfor %}
    </div>
  </div>
</section>
