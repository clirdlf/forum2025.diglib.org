---
permalink: search.json
eleventyExcludeFromCollections: true
---

[
{%- set pages = collections.all | rejectattr("data.draft", "equalto", true) -%}
{%- for page in pages %}
  {
    "title": {{ page.data.title | dump | safe }},
    "url": {{ page.url | dump | safe }},
    "content": {{ page.templateContent | striptags | replace('\n', ' ') | replace('\r', '') | trim | dump | safe }}
  }{{ "," if not loop.last }}
{%- endfor %}
]